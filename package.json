{
  "name": "quix.ai",
  "displayName": "Quix AI",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:quix.suggestComment",
    "onCommand:quix.explainSelection",
    "onView:quix-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quix-sidebar-view",
          "title": "Quix AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "quix-sidebar-view": [
        {
          "type": "webview",
          "id": "quix-sidebar",
          "name": "Quix AI",
          "icon": "media/icon.svg",
          "contextualTitle": "Quix"
        }
      ]
    },
    "commands": [
      {
        "command": "quix.explainSelection",
        "category": "Quix",
        "title": "Explain This"
      },
      {
        "command": "quix.suggestComment",
        "category": "Quix",
        "title": "Suggest Comment"
      },
      {
        "command": "quix.promptSelection",
        "category": "Quix",
        "title": "Prompt Selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "quix.explainSelection",
          "group": "0_quix"
        },
        {
          "when": "editorTextFocus",
          "command": "quix.suggestComment",
          "group": "0_quix"
        },
        {
          "when": "editorTextFocus",
          "command": "quix.promptSelection",
          "group": "0_quix"
        }
      ]
    },
    "keybindings": [
      {
        "command": "quix.explainSelection",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "quix.suggestComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "quix.promptSelection",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Quix AI",
      "properties": {
        "quix.apiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini AI API Key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tsconfig/svelte": "^5.0.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "rollup": "^4.9.1",
    "rollup-plugin-svelte": "^6.0.0",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "marked": "^11.1.0"
  }
}